@model Dynamic_Time_Table_Generator.Models.TTGeneratorModel
@{
    ViewData["Title"] = "DynamicTTGenerator";
}
    @using (Html.BeginForm("DynamicTTGenerator", "DynamicTTGenerator", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h2 align="center">Dynamic Time-Table Generator</h2>
        <div id="daysandNoOfSubject" align="center" class="form-horizontal" style="margin-top:50px">
            <div class=" form-group col-md-10">
                <label class="control-label col-md-2">Working Days :</label>
                @Html.TextBoxFor(model => model.WorkingDays, new { htmlAttributes = new { @class = "form-control", @id = "WorkingDays", @Type = "number", @min = 1, @max = 1 } })
                <br /> @Html.ValidationMessageFor(model => model.WorkingDays, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-10">
                <label class="control-label col-md-2">Subject Per Day :</label>
                @Html.TextBoxFor(model => model.SubjectPerDay, new { htmlAttributes = new { @class = "form-control", @id = "SubjectPerDay", @Type = "number", @min = 1, @max = 1 } })
                <br /> @Html.ValidationMessageFor(model => model.SubjectPerDay, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-10">
                <label class="control-label col-md-2">Total Subject :</label>
                @Html.TextBoxFor(model => model.TotalSubject, new { htmlAttributes = new { @class = "form-control", @id = "TotalSubject", @Type = "number", @min = 1, @max = 1 } })
                <br /> @Html.ValidationMessageFor(model => model.TotalSubject, "", new { @class = "text-danger" })
            </div>
            <br>
            <div class="form-group" align="center">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </div>
    }